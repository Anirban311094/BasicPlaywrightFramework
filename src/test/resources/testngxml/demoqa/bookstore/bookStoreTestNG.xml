<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Book Store Operations Suite">
    <listeners>
        <listener class-name="com.framework.listeners.TestListener"/>
    </listeners>

    <test name="Search and Discovery">
        <classes>
            <class name="com.framework.tests.demoqa.bookstore.BookStoreTest">
                <methods>
                    <include name="userCanSearchBooks"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Collection CRUD Operations">
        <classes>
            <class name="com.framework.tests.demoqa.bookstore.BookStoreTest">
                <methods>
                    <include name="userCanAddAnyBook"/>
                    <include name="userCanDeleteAnyBook"/>
                    <include name="cleanUpProfile"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>